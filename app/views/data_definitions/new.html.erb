<% if user_signed_in? and current_user.admin? %>
<div class="modal-body">
  <h1>New Data Definition</h1>
  <%= render 'form', data_definition: @data_definition %>
  <%= link_to 'Back', data_definitions_path, :class => "btn btn-primary btn-sm" %>
</div>

<% else %> 

<div class="container">
<div class="pb-5">
  <h1>Please login as <em>admin</em> to create new <em>Data Definition</em></h1>
</div>
</div>
<% end %>