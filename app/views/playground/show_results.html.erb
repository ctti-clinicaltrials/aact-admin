  CodeMirror.fromTextArea(document.getElementById('query'), {
    mode: 'sql',
    indentWithTabs: true,
    smartIndent: true,
    lineNumbers: true,
    matchBrackets : true,
    autofocus: true,
    theme: 'monokai',
    extraKeys: {"Ctrl-Space": "autocomplete"}
  });      
