<div class="dashboard-wrapper">
    <div class="title mb-3">Public Database Usage</div>

    <!-- Flash Messages -->
    <% if flash.any? %>
        <% flash.each do |type, message| %>
            <div class="alert alert-<%= type == 'error' ? 'danger' : type == 'warning' ? 'warning' : 'info' %> alert-dismissible fade show" role="alert">
                <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% end %>
    <% end %>

    <!-- Date Range Selector -->
    <div class="card mb-4">
        <div class="card-header">
            <div class="fw-medium">Select Date Range</div>
        </div>
        <div class="card-body">
            <%= form_tag admin_dashboard_path, method: :get, class: 'date-range-form' do %>
                <div class="date-range-grid">
                    <div>
                        <%= label_tag :start_date, "Start Date", class: "form-label small" %>
                        <%= date_field_tag :start_date, @start_date, class: "form-control form-control-sm mb-0" %>
                    </div>
                    <div>
                        <%= label_tag :end_date, "End Date", class: "form-label small" %>
                        <%= date_field_tag :end_date, @end_date, class: "form-control form-control-sm mb-0" %>
                    </div>
                    <div>
                        <%= submit_tag "Apply", class: "snapshots-action-button primary mb-0" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <% if @metrics.present? %>
        <!-- Summary Card -->
        <div class="card mb-4 summary-card">
            <div class="card-header">
                <div class="fw-medium">Usage Summary:
                    <span class="date-range-info"><%= @date_range %> (<%= @total_days %> days)</span>
                </div>
            </div>
            <% if @has_pre_collection_dates %>
                <div class="alert alert-info alert-sm mx-3 mt-2 mb-0">
                    Data collection began June 6, 2025. No data available for dates before this.
                </div>
            <% end %>
            <% if @has_future_dates %>
                <div class="alert alert-info alert-sm mx-3 mt-2 mb-0">
                    The selected range includes future dates. Current day statistics will be available tomorrow.
                </div>
            <% end %>
            <div class="card-body py-3">
                <!-- User Statistics Row -->
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="border rounded p-2 text-center">
                            <div class="text-muted small mb-1">Avg Users/Day</div>
                            <div class="fs-6 fw-bold">
                                <%= number_with_precision(@avg_users_per_period, precision: 0) %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-2 text-center">
                            <div class="text-muted small mb-1">Max Users/Day</div>
                            <div class="fs-6 fw-bold">
                                <%= @max_users_per_period %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-2 text-center">
                            <div class="text-muted small mb-1">Min Users/Day</div>
                            <div class="fs-6 fw-bold">
                                <%= @min_users_per_period %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Query Statistics Row -->
                <div class="row g-3 mt-0">
                    <div class="col-md-4">
                        <div class="border rounded p-2 text-center">
                            <div class="text-muted small mb-1">Total Queries</div>
                            <div class="fs-6 fw-bold">
                                <%= number_with_delimiter(@all_metrics.sum { |m| m['total_queries'] }) %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-2 text-center">
                            <div class="text-muted small mb-1">Avg Queries/Day</div>
                            <div class="fs-6 fw-bold">
                                <%= number_with_delimiter(@avg_queries_per_period.round) %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-2 text-center">
                            <div class="text-muted small mb-1">Avg Query Duration</div>
                            <div class="fs-6 fw-bold">
                                <%= @all_metrics.present? ? number_with_precision(@all_metrics.sum { |m| m['avg_query_duration_ms'] } / @all_metrics.size, precision: 0) : 0 %> ms
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Table -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="fw-medium">Daily Database Usage Metrics</div>
                <small class="text-muted">Data sourced from AACT public database logs. Refreshed daily.</small>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="text-center">Date</th>
                                <th class="text-center">Unique Users</th>
                                <th class="text-end">Total Queries</th>
                                <th class="text-end">Queries/User</th>
                                <th class="text-end">Total Duration (ms)</th>
                                <th class="text-end">Avg Duration (ms)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @metrics.each do |metric| %>
                                <tr>
                                    <td class="text-center">
                                        <%= link_to Date.parse(metric['date']).strftime('%b %d, %Y'),
                                                admin_daily_usage_path(date: metric['date']),
                                                class: "custom-link" %>
                                    </td>
                                    <td class="text-center"><%= metric['unique_users'] %></td>
                                    <td class="text-end"><%= number_with_delimiter(metric['total_queries']) %></td>
                                    <td class="text-end"><%= number_with_delimiter(number_with_precision(metric['queries_per_user'], precision: 0)) %></td>
                                    <td class="text-end"><%= number_with_delimiter(metric['total_duration_ms'].to_i) %></td>
                                    <td class="text-end"><%= number_with_precision(metric['avg_query_duration_ms'], precision: 0) %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination (only show if using pagination) -->
        <% if @use_pagination %>
            <div class="pagination-wrapper">
                <%= paginate @metrics,
                            params: { start_date: @start_date, end_date: @end_date },
                            class: "pagination",
                            inner_window: 2,
                            outer_window: 0
                %>
            </div>
        <% end %>

    <% else %>
        <div class="alert alert-warning">
            <h4 class="alert-heading">No Data Available</h4>
            <% if @is_future_range %>
                <p>The selected date range (<%= @date_range %>) is in the future.</p>
            <% elsif @is_pre_collection_range %>
                <p>The selected date range (<%= @date_range %>) is before database usage data collection began (June 6, 2025).</p>
            <% elsif @has_future_dates %>
                <p>The selected date range includes future dates. Current day statistics will be available tomorrow.</p>
            <% else %>
                <p>Something went wrong. Please try again later or contact support if the issue persists.</p>
            <% end %>
        </div>
    <% end %>
</div>

<script type="text/javascript">
$(document).ready(function() {
    function validateDateRange() {
        var startDate = new Date($('#start_date').val());
        var endDate = new Date($('#end_date').val());
        var submitBtn = $('.snapshots-action-button.primary');
        var errorDiv = $('#date-range-error');

        if (startDate > endDate) {
            if (errorDiv.length === 0) {
                $('.date-range-form').append('<div id="date-range-error" class="alert alert-danger mt-2 small">Start date cannot be after end date.</div>');
            }
            submitBtn.prop('disabled', true);
        } else {
            errorDiv.remove();
            submitBtn.prop('disabled', false);
        }
    }

    $('#start_date, #end_date').on('change', validateDateRange);
    validateDateRange();
});
</script>