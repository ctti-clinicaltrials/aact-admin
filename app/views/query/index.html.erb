<div class="container">
  <div class="pb-3">
    <h1>SQL Query Results</h1>
  </div>
  <table class="table table-sm table-striped" style="max-width: 100rem;">
    <thead>
      <tr>
        <% @results.first %>
        <% @results.first.each do |key,value| %>
          <th><%= key %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |data| %>
        <tr>
          <% data.each do |key,value| %>
            <td><%= value %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pb-3">
  </div>
</div>
