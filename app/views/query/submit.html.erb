<%= form_tag("/query/index") do %>
  <%= label_tag(:query, "Input SQL Query:") %>
  <% if @error.present? %>
    <div id="error_explanation">
      <ul>
      <% @error.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= text_area_tag(:query, params[:query], :required => 'required') %>
  <div class="pb-3">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary">Execute SQL Query</button>
  </div>
<% end %>
