<%# dynamic class name based on snapshot type %>
<div class="snapshot-card <%= snapshot["type"] %>">
  <div class="snapshot-header">
    <h3 class="snapshot-type <%= snapshot["type"] %>"><%= snapshot_title(snapshot["type"]) %></h3>
    <span class="snapshot-date"><%= snapshot["date"] %></span>
  </div>
  <div class="snapshot-content">
    <div class="snapshot-details">
      <div class="detail-item">
        <span class="detail-label">File:</span>
        <span class="detail-value"><%= snapshot["file_name"] %></span>
      </div>
      <div class="detail-item">
        <span class="detail-label">Size:</span>
        <span class="detail-value"><%= snapshot["size"] %></span>
      </div>
    </div>
    <div class="snapshot-description">
      <h4><%= snapshot_description_title(snapshot["type"]) %></h4>
      <%= snapshot_description_content(snapshot["type"]) %>
    </div>
    <div class="snapshot-actions">
      <a href="<%= snapshot["download_url"] %>"
        class="action-button primary"
        target="_blank">
        Download File
      </a>
      <%= link_to snapshots_downloads_path(type: snapshot["type"]), class: "action-button secondary" do %>
        View All Available <%= snapshot_view_all_text(snapshot["type"]) %>
      <% end %>
    </div>
  </div>
</div>