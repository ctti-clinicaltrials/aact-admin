<%= form_for(release) do |f| %>
  <% if release.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(release.errors.count, "error") %> prohibited this release from being saved:</h2>
      <ul>
      <% release.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="modal-body">
    <div class="container-fluid">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="container-fluid">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: "form-control" %>
    </div>

    <div class="container-fluid">
      <%= f.label :released_on %>
      <%= f.text_field :released_on, id: 'flatpickr-date', class: "form-control" %>
    </div>

    <div class="container-fluid">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 10, class: "form-control" %>
    </div>

    <div class="pb-3">
    </div>

    <div class="actions container-fluid">
      <%= f.submit :class => "btn btn-primary btn-sm"%>
    </div>

    <div class="pb-4">
    </div>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const flatpickrDate = document.getElementById('flatpickr-date');
  flatpickr(flatpickrDate, {enableTime: false});
})
</script>
