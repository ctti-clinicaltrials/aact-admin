<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Releases</h1>
  <table class="table table-sm table-striped" style="max-width: 100rem;">
    <thead>
      <tr>
        <th>Title</th>
        <th>Subtitle</th>
        <th>Released On</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @releases.each do |release| %>
        <tr>
          <td><%= release.title %></td>
          <td><%= release.subtitle %></td>
          <td><%= release.released_on.strftime('%B %d, %Y') %></td>
          <td><%= link_to 'Edit', edit_release_path(release), :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Delete', release, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Release', new_release_path, :class => "btn btn-primary btn-sm" %>
  <%= link_to 'Home', root_path, :class => "btn btn-primary btn-sm" %>
</div>
