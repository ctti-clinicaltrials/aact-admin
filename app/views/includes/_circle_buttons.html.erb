<div class="circleButtons container">
  <div class="row">
    <div class="d-flex justify-content-sm-center">
      <a href="/connect">
        <div class="iconWrap">
          <%= fa_icon('plug') %>
        </div>
        <span class='circleButtons'>Connect</span>
      </a>
      <a href="/download">
        <div class="iconWrap">
          <%= fa_icon('download') %>
        </div>
        <span class='circleButtons'>Download</span>
      </a>
      <a href="/learn_more">
        <div class="iconWrap">
          <%= fa_icon('university') %>
        </div>
        <span class='circleButtons'>Learn</span>
      </a>
      <a href="/shared_data">
        <div class="iconWrap">
          <%= fa_icon('briefcase') %>
        </div>
        <span class='circleButtons'>Shared Data</span>
      </a>

      <% if (!current_user.nil? and current_user.admin?) %>
        <a href="/users">
          <div class="iconWrap">
            <%= fa_icon('address-card') %>
          </div>
          <span class='circleButtons'>Users</span>
        </a>
      <% end %>
    </div>
  </div>
</div>
