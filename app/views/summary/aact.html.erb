
<div class="container">
  <div class="pb-3">
    <h1>AACT Studies Summary</h1>
  </div>
  <table class="table table-sm table-striped" style="max-width: 100rem;">
    <thead>
      <tr>
        <th>Data</th>
        <th>Date</th>
        <th>Number of Studies</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @updates.each do |update| %>
        <tr>
          <td><%= update.studies %></td>
          <td><%= update.last_updated.strftime('%B %d, %Y') %></td>
          <td><%= update.number_of_studies %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
